<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Anonymous Student", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <div class="dropdown">
                        <button class="btn btn-success dropdown-toggle" type="button" data-toggle="dropdown" style="margin-top: 10px">
                            Student
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Create", "Create", "Student")</li>
                            <li>@Html.ActionLink("Index", "Index", "Student")</li>
                            @*<li>@Html.ActionLink("Student", "Create", "Student")</li>
                                <li>@Html.ActionLink("Student", "Create", "Student")</li>*@
                        </ul>
                    </div>



                    @*<li>@Html.ActionLink("Student", "Index", "Student")</li>
                        <li>@Html.ActionLink("Department", "Index", "Department")</li>
                        <li>@Html.ActionLink("Faculty", "Index", "Faculty")</li>*@

                </ul>
                <ul class="nav navbar-nav">
                    <div class="dropdown">
                        <button class="btn btn-success dropdown-toggle" type="button" data-toggle="dropdown" style="margin-top: 10px; margin-left: 5px;">
                            Department
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Create", "Create", "Department")</li>
                            <li>@Html.ActionLink("Index", "Index", "Department")</li>
                            <li>@Html.ActionLink("Search", "Search", "Department")</li>
                            @*<li>@Html.ActionLink("Student", "Create", "Student")</li>*@
                        </ul>
                    </div>
                </ul>

                <ul class="nav navbar-nav">
                    <div class="dropdown">
                        <button class="btn btn-success dropdown-toggle" type="button" data-toggle="dropdown" style="margin-top: 10px; margin-left: 5px;">
                            Faculty
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Create", "Create", "Department")</li>
                            <li>@Html.ActionLink("Index", "Index", "Department")</li>
                            <li>@Html.ActionLink("Search", "Search", "Department")</li>
                            @*<li>@Html.ActionLink("Student", "Create", "Student")</li>*@
                        </ul>
                    </div>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application | <strong>Nazmul Hyder</strong> | CSE | UIU</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
