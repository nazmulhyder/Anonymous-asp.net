@model IEnumerable<Anonymous_311018.Models.Department>
@{
    ViewBag.Title = "Index";
}

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"/>

<h2>Department(Index)</h2>
<table id="dept_index_table" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th class="text-center">@Html.DisplayNameFor(model => model.NumberofStudent)</th>
            <th class="text-center">@Html.DisplayNameFor(model => model.NumberofFaculty)</th>
            <th class ="text-center">
                Action
            </th>
        </tr>

    </thead>
    <tbody>
    
     @if (Model != null)
     {
         foreach (var item in Model)
         {

             <tr>
                 <td>
                     @Html.DisplayFor(modelItem => item.Id)
                 </td>
                 <td>
                     @Html.DisplayFor(modelItem => item.Name)
                 </td>
                 <td class="text-center">
                     @Html.DisplayFor(modelItem => item.NumberofStudent)
                 </td>
                 <td class="text-center">
                     @Html.DisplayFor(modelItem => item.NumberofFaculty)
                 </td>
                 <td class="text-center">
                     @*<a> <i class="fa fa-eye" style="color: black"></i></a> |
                     <a><i class="fa fa-pencil" aria-hidden="true"></i> </a>*@
                     <a href="" class="btn btn-success btn-xs"><i class="fa fa-pencil"></i></a> 
                     <a href="" class="btn btn-primary btn-xs"><i class="fa fa-eye"></i></a> 
                     <a href="" class="btn btn-danger btn-xs"><i class="fa fa-trash"></i></a>


                 </td>
             </tr>

         }
     }
    </tbody>
    <tfoot>
        <tr>
            <th>Id</th>
            <th>Departments</th>
            <th class="text-center">Number of Student</th>
            <th class="text-center">Number of Faculty</th>
            <th class="text-center">Action</th>

        </tr>
    </tfoot>
</table>
        
    

